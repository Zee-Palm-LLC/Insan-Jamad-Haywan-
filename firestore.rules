rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow authenticated users (including anonymous) to read/write
    // their game data
    match /games/{gameId}/sessions/{sessionId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to manage their player profile
    match /games/{gameId}/game_players/{playerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

